<div class="schedule_addition">

  <h1>予定追加</h1>

  <%= form_with(model: @plan, local: true) do |form| %>

    <div class="new_plans">

      <div class="new_plan">
        <div class="site_name">
          <%= form.label :現場名 %>
          <%= form.text_field :site_name %>
        </div>
      </div>

      <div class="new_plan">
        <div class="place">
          <%= form.label :場所 %>
          <%= form.text_field :place %>
        </div>
      </div>

      <div class="new_plan">
        <div class="period">
          <%= form.label :期間 %>
          <%= form.text_field :period %>
        </div>
      </div>

      <div class="new_plan">
        <div class="time">
          <%= form.label :集合時間 %>
          <%= form.datetime_select :meeting_time %>
        </div>
      </div>

      <div class="new_plan">
        <div class="number_of_people">
          <%= form.label :人数 %>
          <%= form.text_field :number_of_people %>
        </div>
      </div>

      <div class="new_plan">
        <div class="belongings">
          <%= form.label :持ち物 %>
          <%= form.text_field :belongings %>
        </div>
      </div>

      <div class="new_plan">
        <div class="phone_number">
          <%= form.label :連絡先電話番号 %>
          <%= form.text_field :phone_number %>
        </div>
      </div>

      <div class="new_plan">
        <div class="car">
          <%= form.label :使用している車両 %>
          <%= form.text_field :car %>
        </div>
      </div>

      <div class="new_plan">
        <div class="submit">
          <%= form.submit %>
        </div>
      </div>

    </div>

  <% end %>
</div>