<div class="wrapper">
  <div class="schedule_addition">

    <h1>予定追加</h1>

    <%= form_with(model: @plan, local: true) do |form| %>

      <div class="new_plans">

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :現場名 %>
          </div>
            <%= form.text_field :site_name, class:'new-text-field' %>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :場所 %>
          </div>
            <%= form.text_field :place, class:'new-text-field' %>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :期間 %>
          </div>
            <%= form.text_field :period, class:'new-text-field' %>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :着工日時 %>
          </div>
          <div class="new-text-fields">
            <%= form.datetime_select :start_time %>
          </div>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :人数 %>
          </div>
            <%= form.text_field :number_of_people, class:'new-text-field' %>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :持ち物 %>
          </div>
            <%= form.text_field :belongings, class:'new-text-field' %>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :連絡先電話番号 %>
          </div>
            <%= form.text_field :phone_number, class:'new-text-field' %>
        </div>

        <div class="new_plan">
          <div class="new-label">
            <%= form.label :使用している車両 %>
          </div>
            <%= form.text_field :car, class:'new-text-field' %>
        </div>

        <div class="new_plan_submit">
          <div class="new_submit">
            <%= form.submit %>
          </div>
        </div>

      </div>

    <% end %>
  </div>
</div>